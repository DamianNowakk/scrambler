<Window x:Class="rc6.NewUsers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nowy użytkownik" Height="179" Width="300">
    <Grid>
        <Label Content="Nazwa" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="newUserNameTextbox" HorizontalAlignment="Left" Height="23" Margin="100,13,0,0" Text="" VerticalAlignment="Top" Width="182"/>
        <Label Content="Hasło" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="newUserPasswordTextbox" Margin="100,44,0,0" Width="182" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label Content="Powtórz hasło" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="newUserPasswordRepeatTextbox" HorizontalAlignment="Left" Height="23" Margin="100,76,0,0" VerticalAlignment="Top" Width="182"/>  
        <Button x:Name="buttonAdd" Content="Dodaj" HorizontalAlignment="Left" Margin="127,113,0,0" VerticalAlignment="Top" Width="75" Click="buttonAdd_Click"/>
        <Button x:Name="buttonCancel" Content="Anuluj" HorizontalAlignment="Left" Margin="207,113,0,0" VerticalAlignment="Top" Width="75" Click="buttonCancel_Click"/>

    </Grid>
</Window>
